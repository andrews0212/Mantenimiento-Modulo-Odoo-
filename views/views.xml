<odoo>
  <data>
    <!-- explicit list view definition -->
<record id="mantenimiento_list_view" model="ir.ui.view">
    <field name="name">mantenimiento.equipo.tree</field>
    <field name="model">mantenimiento.equipo</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="category_id"/>
            <field name="description"/>
            <field name="ubicacion"/>
            <field name="numeroSerie"/>
            <field name="proveedor_id"/>  <!-- CambiÃ© proveedor a proveedor_id -->
        </tree>
    </field>
</record>


    <!-- Form view for Equipo Categoria -->
    <record id="view_category_form" model="ir.ui.view">
      <field name="name">Equipo.Categoria.form</field>
      <field name="model">equipo.categoria</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Form view for Proveedor (corregido id) -->
  <record id="view_proveedor_form" model="ir.ui.view">
    <field name="name">equipo.proveedor.form</field>
    <field name="model">equipo.proveedor</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="telefono"/>
                    <field name="email"/>
                    <field name="direccion"/>
                </group>
            </sheet>
        </form>
    </field>
</record>



    <!-- Actions for opening views on models -->
    <record id="mantenimiento_action" model="ir.actions.act_window">
      <field name="name">Mantenimiento</field>
      <field name="res_model">mantenimiento.equipo</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Mantenimiento" id="mantenimiento.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Administracion" id="escuela.equipo_menu_1" parent="mantenimiento.menu_root"/>
    <menuitem name="Equipo" id="mantenimiento.menu_1" parent="mantenimiento.menu_root" action="mantenimiento_action"/>
    <menuitem name="Categoria" id="mantenimiento.categoria" parent="mantenimiento.menu_root" action="mantenimiento_action"/>
    <menuitem name="Proveedor" id="mantenimiento.proveedor" parent="mantenimiento.menu_root" action="mantenimiento_action"/>
  </data>
</odoo>
