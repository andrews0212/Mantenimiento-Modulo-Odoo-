<odoo>
  <data>

  <!-- Vista de lista para el modelo mantenimiento.orden -->
   <record id="orden_list_view" model="ir.ui.view">
  <field name="name">mantenimiento.orden.tree</field>
  <field name="model">mantenimiento.orden</field>
  <field name="arch" type="xml">
    <tree>
      <field name="tipo_mantenimiento"/>
      <field name="fecha_programada"/>
      <field name="fecha_realizacion"/>
      <field name="equipo_id"/>
      <field name="estado"/>
      <field name="descripcion"/>
    </tree>
  </field>
</record>

  <!-- Vista de formulario para el modelo mantenimiento.orden -->
     <record id="view_orden_form" model="ir.ui.view">
        <field name="name">mantenimiento.orden.form</field>
        <field name="model">mantenimiento.orden</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tipo_mantenimiento"/>
                        <field name="fecha_programada"/>
                        <field name="fecha_realizacion"/>
                        <field name="equipo_id"/>
                        <field name="estado"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Vista de lista para el modelo mantenimiento.equipo -->
  <record id="mantenimiento_list_view" model="ir.ui.view">
  <field name="name">mantenimiento.equipo.tree</field>
  <field name="model">mantenimiento.equipo</field>
  <field name="arch" type="xml">
    <tree>
      <field name="name"/>
      <field name="category_id"/>
      <field name="description"/>
      <field name="ubicacion"/>
      <field name="numeroSerie"/>
      <field name="proveedor_id"/>
    </tree>
  </field>
</record>


    <!-- Vista de lista para el modelo mantenimiento.categoria -->
    <record id="view_category_tree" model="ir.ui.view">
      <field name="name">mantenimiento.categoria.tree</field>
      <field name="model">mantenimiento.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- view Provedor-->
     <record id="view_proveedor_tree" model="ir.ui.view">
        <field name="name">mantenimiento.proveedor.tree</field>
        <field name="model">mantenimiento.proveedor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="telefono"/>
                <field name="email"/>
                <field name="direccion"/>
            </tree>
        </field>
    </record>

    <record id="view_proveedor_form" model="ir.ui.view">
        <field name="name">mantenimiento.proveedor.form</field>
        <field name="model">mantenimiento.proveedor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="telefono"/>
                        <field name="email"/>
                        <field name="direccion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir las vistas de mantenimiento.equipo -->
    <record id="mantenimiento_action" model="ir.actions.act_window">
      <field name="name">Equipo</field>
      <field name="res_model">mantenimiento.equipo</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="orden_action" model="ir.actions.act_window">
      <field name="name">Orden Mantenimiento</field>
      <field name="res_model">mantenimiento.orden</field>
      <field name="view_mode">tree,form</field>
    </record>

      <record id="proveedor_action" model="ir.actions.act_window">
      <field name="name">Proveedor</field>
      <field name="res_model">mantenimiento.proveedor</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción para abrir las vistas de Categorías -->
    <record id="action_categoria_list" model="ir.actions.act_window">
      <field name="name">Categorías de Equipo</field>
      <field name="res_model">mantenimiento.categoria</field>
      <field name="view_mode">tree,form</field> <!-- Agregado 'form' para permitir la creación -->
      <field name="view_id" ref="view_category_tree"/>
      <field name="context">{}</field>
    </record>
      <!-- Menú Proveedor con acción asociada -->
    <record id="action_proveedor" model="ir.actions.act_window">
      <field name="name">Proveedores de Equipos</field>
      <field name="res_model">mantenimiento.proveedor</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Menú Principal -->
    <menuitem name="Mantenimiento" id="menu_mantenimiento_root" sequence="1"/>

    <!-- Menú de Administración dentro de "Mantenimiento" -->
    <menuitem name="Gestor Equipo" id="menu_administracion" parent="menu_mantenimiento_root" sequence="2"/>

    <!-- Submenús dentro de "Administración" -->
    <menuitem name="Equipos" id="menu_mantenimiento_equipo" parent="menu_administracion" action="mantenimiento_action" sequence="3"/>
    <menuitem name="Categorías" id="menu_mantenimiento_categoria" parent="menu_administracion" action="action_categoria_list" sequence="4"/>
    <menuitem name="Proveedores" id="menu_mantenimiento_proveedor" parent="menu_administracion" action="action_proveedor" sequence="5"/>

    <menuitem name="Mantenimiento" id="menu_Mantenimiento" parent="menu_mantenimiento_root"/>
    
  <menuitem name="Orden Mantenimiento" id="menu_mantenimiento_orden" parent="menu_Mantenimiento" action="orden_action"/>
  </data>
</odoo>
